# Server Configuration
BIND_ADDRESS=0.0.0.0:8080

# Authentication
JWT_SECRET=change-this-secret-in-production-use-strong-random-key
JWT_TOKEN_TTL=3600
JWT_REFRESH_TOKEN_TTL=604800

# API Keys (comma-separated)
API_KEYS=sk_test_1234567890abcdef,sk_prod_9876543210fedcba

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_GLOBAL=10000
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_ANONYMOUS=100
RATE_LIMIT_API_KEY=5000

# Logging
RUST_LOG=info,llm_optimizer_api_rest=debug,axum=debug,tower_http=debug

# Timeouts (seconds)
REQUEST_TIMEOUT=30
LONG_OPERATION_TIMEOUT=300
SHORT_OPERATION_TIMEOUT=5

# OpenTelemetry (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=llm-optimizer-api-rest

# Metrics (Optional)
METRICS_ENABLED=true
METRICS_PORT=9090

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost/llm_optimizer

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development
